{
  "name": "@xclaude/xc-run",
  "version": "0.3.0",
  "description": "Rapid development MCP for Xcode projects - build, install, and launch iOS apps",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xc-run": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/xc-run/src/index.js --bundle --platform=node --target=node18 --format=esm --minify --outfile=dist/index.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
