{
  "name": "@xclaude/xc-testing",
  "version": "0.2.0",
  "description": "E2E testing and validation MCP for iOS apps",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xc-testing": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/xc-testing/src/index.js --bundle --platform=node --target=node18 --format=esm --minify --outfile=dist/index.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
