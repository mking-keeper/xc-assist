{
  "name": "@xclaude/xc-assist",
  "version": "1.0.0",
  "description": "iOS Simulator testing MCP with 15 tools for build, lifecycle, UI automation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xc-assist": "dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && npm run bundle",
    "bundle": "esbuild dist/xc-assist/src/index.js --bundle --platform=node --target=node18 --format=esm --minify --outfile=dist/index.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
