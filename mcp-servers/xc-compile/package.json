{
  "name": "@xclaude/xc-compile",
  "version": "0.2.0",
  "description": "Ultra-minimal build execution MCP - just xcode_build",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xc-compile": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/xc-compile/src/index.js --bundle --platform=node --target=node18 --format=esm --minify --outfile=dist/index.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.21.0"
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
