{
  "name": "xc-assist",
  "version": "1.0.1",
  "type": "module",
  "description": "iOS Simulator testing plugin for Claude Code",
  "private": true,
  "workspaces": [
    "mcp-servers/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "rm -rf mcp-servers/*/dist",
    "test": "cd mcp-servers && npm run test",
    "coverage": "cd mcp-servers && npm run coverage",
    "ts:check": "cd mcp-servers && npm run ts:check",
    "audit:check": "npm audit --audit-level=high",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "bump": "tsx scripts/bump-version.ts --"
  },
  "keywords": [
    "xcode",
    "ios",
    "simulator",
    "claude-code",
    "plugin",
    "mcp"
  ],
  "author": "mking-keeper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mking-keeper/xc-assist.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.21.5",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^1.6.0"
  }
}
