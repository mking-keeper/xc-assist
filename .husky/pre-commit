#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# TypeScript check
echo "ğŸ“ Checking TypeScript..."
npm run ts:check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Commit aborted."
  exit 1
fi

# Format check
echo "ğŸ¨ Checking formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Format check failed. Run 'npm run format' to fix. Commit aborted."
  exit 1
fi

# Run tests (from mcp-servers where vitest config is located)
echo "ğŸ§ª Running tests..."
cd mcp-servers && npm run test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Commit aborted."
  cd ..
  exit 1
fi
cd ..

# Rebuild MCP servers if TypeScript files changed (ensures dist/ stays in sync)
if git diff --cached --name-only | grep -q "mcp-servers/"; then
  echo "ğŸ“¦ Building all MCP servers (changes detected)..."
  cd mcp-servers
  npm run build:all
  cd ..
  git add mcp-servers/xc-*/dist/
fi
